= provide(:title, "Anziel - Job Info") 
#jobs
	.job
		%h2= @job.title
		%p= @job.description
		%p= @job.company
		%p= link_to @job.company, @job.url, target: '_blank'
%br
%hr
%br
#links
	= link_to "Back", root_path, class: "btn btn-small btn-default"
	= link_to "Edit", edit_job_path(@job), class: "btn btn-small btn-default"
	= link_to "Delete", job_path(@job), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-small btn-default"

%br
%hr
%br
#jobapplications
	= @job.job_apps.count
	Applications

	= render @job.job_apps
	%h2= "Apply for this job"
	= render 'job_apps/form', new_jobapp: @new_jobapp